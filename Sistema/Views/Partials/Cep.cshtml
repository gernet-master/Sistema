        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                @{
                    Inputs inp = new Inputs();
                    inp.inputType = "text";
                    inp.label = Language.XmlLang(179, 1).Text;
                    inp.className = "form-control";
                    inp.id = "search_cep";
                    inp.maxLenght = 9;
                    inp.validation = "minSize[9],maxSize[9]";
                    inp.mask = "00000-000";
                    inp.keyUp = "FOOTER.enterSearchCep(event)";
                    inp.placeholder = "_____-___";
                    inp.addButton = true;
                    inp.buttonTooltip = Language.XmlLang(107, 2).Text;
                    inp.buttonClick = "FOOTER.searchCep()";
                    inp.buttonClass = "btn btn-primary";
                    inp.buttonValue = "<i class='fa fa-search ft-white'></i>";
                    @Html.Raw(inp.CreateInput());
                }
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12" id="cep_result">
                @Language.XmlLang(181, 2).Text
            </div>
        </div>
    </div>
